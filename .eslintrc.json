{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "comma-dangle": ["error", "only-multiline"],
    "no-underscore-dangle": 0,
    "operator-linebreak": ["error", "after"],
    "no-restricted-globals": ["error", "event"],
    "no-param-reassign": ["error", { "props": false }]
  }
}
